# EBR Platform Environment Configuration
# Copy this file to .env and update values

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
DJANGO_ENVIRONMENT=development
DJANGO_SECRET_KEY=your-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DB_NAME=ebr_platform
DB_USER=ebr_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key

# =============================================================================
# ENCRYPTION
# =============================================================================
# 32-byte hex key for AES-256 field encryption
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FIELD_ENCRYPTION_KEY=

# Password for encrypting digital signature private keys
SIGNATURE_KEY_PASSWORD=

# =============================================================================
# REDIS / CELERY
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/1

# =============================================================================
# CORS
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# SENTRY (Production only)
# =============================================================================
SENTRY_DSN=

# =============================================================================
# AWS S3 (Production file storage)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=

# =============================================================================
# EMAIL
# =============================================================================
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True

# =============================================================================
# COMPLIANCE
# =============================================================================
AUDIT_LOG_RETENTION_DAYS=2555
REQUIRE_DIGITAL_SIGNATURES=True
